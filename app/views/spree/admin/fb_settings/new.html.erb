<% content_for :page_title do %>
  <%= Spree.t(:fb_settings) %>
<% end %>

<% content_for :page_actions do %>
	<li>
		<%= button_link_to Spree.t(:back_to_fb_catalogs_list), spree.admin_fb_catalogs_path, :icon => 'icon-arrow-left' %>
	</li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @fb_settings } %>

<%= form_for [:admin , @fb_settings] do |f| %>

  <fieldset class="no-border-top">

    <%= render 'form', f: f %>

    <div class="clear"></div>

    <%= render :partial => 'spree/admin/shared/new_resource_links' %>

  </fieldset>

<% end %>
